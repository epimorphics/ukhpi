.js-reveal.reveal-block
  .js-search-prompt
    = t( "search_state.prompt" )
    %span

  .c-search-controls
    %button.c-action.c-action-prominent.js-reveal-button
      %i.fa
      %span.if-revealing
        = t( "search_state.revealing_button_caption" )
      %span.not-revealing
        = t( "search_state.reveal_button_caption" )

    %span.c-download-controls
      %span.c-download-controls--prompt
      = link_to( new_download_path( format: "json" ), class: "c-action js-preferences-url" ) do
        %i.fa.fa-external-link
        download as json
      = link_to( new_download_path( format: "csv" ), class: "c-action js-preferences-url" ) do
        %i.fa.fa-external-link
        download as spreadsheet (csv)
      = link_to( new_download_path( format: "ttl" ), class: "c-action js-preferences-url" ) do
        %i.fa.fa-external-link
        download as rdf

.js-preferences-form.hidden
  = render partial: "hpi_search_form_js"

.js-hidden
  = render partial: "hpi_search_form"
