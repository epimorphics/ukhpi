.row
  .col-sm-12.col-md-6
    .form-group
      %label.control-label{ for: "from-pick" }
        = t( "index.from" )
        %span#fromdatepicker.input-group.date
          %span.input-group-addon
            %input#from-pick{ type: "text", name: "from", value: @exploration_state.preference( :from )}
            %span.fa.fa-calendar

  .col-sm-12.col-md-6
    .form-group
      %label.control-label{ for: "to-pick" }
        = t( "index.to" )
        %span#todatepicker.input-group.date
          %span.input-group-addon
            %input#to-pick{ type: "text", name: "to", value: @exploration_state.preference( :to )}
            %span.fa.fa-calendar
