    - if @preferences
      %link{ rel: "canonical", href: "//#{request.host_with_port}#{@preferences.as_path( :view )}"}

    /[if lt IE 9]
      = javascript_include_tag "assets/html5shiv.js"
      = javascript_include_tag "//cdn.jsdelivr.net/es5.shim/4.5.7/es5-shim.js"
      = javascript_include_tag "//cdn.jsdelivr.net/es5.shim/4.5.7/es5-sham.js"
      = javascript_include_tag "//cdn.jsdelivr.net/lodash/4.9.0/lodash.js"
      :javascript
        window.isIE8 = true;

    <!--[if gt IE 8]><!-->
    = javascript_include_tag :d3
    <!--<![endif]-->

    = javascript_include_tag "application"

  %body.government.website.lr.ppd-standard-report

    %header#global-header.with-proposition.lr-header{ role: "banner" }
      .header-wrapper
        .header-global
          .header-logo
            %h1.title-bar--h1
              %a.content{ href: "/app/ukhpi", title: "UK HPI" }
                = image_tag( "ukhpi-icon.png", srcset: image_path( "ukhpi-icon.svg" ) )
              UK House Price Index

    .o-lr-top-bar


    =render partial: "common/flash_message"

    %main.container.o-container{ role: "main"}
      .o-beta-banner
        %p
          %strong.o-beta-tag BETA
          %span.text-muted
            This is a new service â€“ your <a href="mailto:commercial.services@landregistry.gov.uk">feedback</a> will help us to improve it.
      .row
        %p.pull-right.text-muted.u-font-smaller
          = link_to "help", "/app/doc/ukhpi", class: "lr-header--header-proposition--a"
          &middot;
          = link_to "SPARQL query", "/app/qonsole", class: "lr-header--header-proposition--a"

      .row
        .col-md-12
          = yield

    = render partial: "common/footer"

