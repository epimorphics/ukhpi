    %link{ rel: "apple-touch-icon", sizes: "180x180", href: image_path( "favicon/apple-touch-icon-180x180.png" ) }
    %link{ rel: "icon", type: "image/png", href: image_path( "favicon/favicon-32x32.png" ), sizes: "32x32" }
    %link{ rel: "icon", type: "image/png", href: image_path( "favicon/favicon-194x194.png" ), sizes: "194x194" }
    %link{ rel: "icon", type: "image/png", href: image_path( "favicon/favicon-96x96.png" ), sizes: "96x96" }
    %link{ rel: "icon", type: "image/png", href: image_path( "favicon/android-chrome-192x192.png" ), sizes: "192x192" }
    %link{ rel: "icon", type: "image/png", href: image_path( "favicon/favicon-16x16.png" ), sizes: "16x16" }
    %link{ rel: "manifest", href: asset_path( "favicon/manifest.json" ) }
    %link{ rel: "mask-icon", href: image_path( "favicon/safari-pinned-tab.svg" ) }
