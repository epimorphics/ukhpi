!!! html
%html{ 'lang' => 'en', 'xml:lang' => 'en', 'xmlns' => 'http://www.w3.org/1999/xhtml' }
  %head
    %title UK House Price Index
    %meta{ charset: 'utf-8' }
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
    = render partial: 'common/favicons'

    - if @preferences
      %link{ rel: 'canonical', href: "//#{request.host_with_port}#{@preferences.as_path(:view)}" }

    /[if lt IE 9]
      :javascript
        window.isIE8 = true;

  %body.government.website.lr.ppd-standard-report

    %header.with-proposition.lr-header#global-header{ role: 'banner' }
      .header-wrapper
        .header-global
          .header-logo
            %h1.title-bar--h1
              %a.content{ href: '/app/ukhpi', title: 'UK HPI' }
                = image_tag('ukhpi-icon.png', srcset: image_path('ukhpi-icon.svg'))
              UK House Price Index

    .o-lr-top-bar


    = render partial: 'common/flash_message'

    %main.container.o-container{ role: 'main' }
      .o-beta-banner
        %p
          %strong.o-beta-tag BETA
          %span.text-muted
            This is a new service â€“ your
            <a rel="external" href="mailto:commercial.services@landregistry.gov.uk">feedback</a>
            will help us to improve it.
      .row
        %p.pull-right.text-muted.u-font-smaller
          = link_to 'help', '/app/doc/ukhpi', class: 'lr-header--header-proposition--a'
          &middot;
          = link_to 'SPARQL query', '/app/qonsole', class: 'lr-header--header-proposition--a'

      .row
        .col-md-12
          = yield

    = render partial: 'common/footer'
    = render partial: 'common/google-analytics'
