.c-logos {
  img {
    max-height: 50px;
    margin-right: 20px;
  }
}

.c-headline-figure {
  font-weight: bold;
}

.c-current-figures {
  p {
    border-left: 8px solid $lr-green-dark;
    padding-left: 12px;
    margin-left: -12px;
  }
}

.c-cta {
  margin-top: 20px;
  margin-bottom: 40px;
  text-align: center;
}

.c-search-tool {
  @extend .button;
  @extend .button-start;

  background-image: url(<%= asset_path 'icon-pointer.png' %>);
}
